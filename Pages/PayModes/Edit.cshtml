@page "{id:int}"
@model SupermarketWEB.Pages.PayModes.EditModel
@{
    ViewData["Title"] = "Edit Pay Mode";
}

<h1>Edit Pay Mode</h1>

<form method="post">
    <input type="hidden" asp-for="PayMode.Id" />
    <div>
        <label asp-for="PayMode.Description"></label>
        <input asp-for="PayMode.Description" />
        <span asp-validation-for="PayMode.Description"></span>
    </div>
    <div>
        <label asp-for="PayMode.IsActive"></label>
        <input asp-for="PayMode.IsActive" />
        <span asp-validation-for="PayMode.IsActive"></span>
    </div>
    <button type="submit">Save</button>
</form>

