@page "{id:int}"
@model SupermarketWEB.Pages.PayModes.DeleteModel
@{
    ViewData["Title"] = "Delete Pay Mode";
}

<h1>Delete Pay Mode</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>@Model.PayMode.Description</h4>
    <p>Is Active: @Model.PayMode.MetodoPago</p>
</div>

<form method="post">
    <input type="hidden" asp-for="PayMode.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-page="./Index" class="btn btn-primary">Back to List</a>
</form>
