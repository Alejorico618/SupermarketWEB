@page "{id:int}"
@model SupermarketWEB.Pages.Providers.EditModel
@{
    ViewData["Title"] = "Edit Provider";
}

<h1>Edit Provider</h1>

<form method="post">
    <input type="hidden" asp-for="Provider.Id" />
    <div>
        <label asp-for="Provider.Name"></label>
        <input asp-for="Provider.Name" />
        <span asp-validation-for="Provider.Name"></span>
    </div>
    <div>
        <label asp-for="Provider.Email"></label>
        <input asp-for="Provider.Email" />
        <span asp-validation-for="Provider.Email"></span>
    </div>
    <div>
        <label asp-for="Provider.Telefono"></label>
        <input asp-for="Provider.Telefono" />
        <span asp-validation-for="Provider.Telefono"></span>
    </div>
    <button type="submit">Save</button>
</form>

