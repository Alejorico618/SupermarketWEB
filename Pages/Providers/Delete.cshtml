@page "{id:int}"
@model SupermarketWEB.Pages.Providers.DeleteModel
@{
    ViewData["Title"] = "Delete Provider";
}

<h1>Delete Provider</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>@Model.Provider.Name</h4>
    <p>Email: @Model.Provider.Email</p>
    <p>Phone: @Model.Provider.Telefono</p>
</div>

<form method="post">
    <input type="hidden" asp-for="Provider.Id" />
    <button type="submit">Delete</button>
    <a asp-page="Index">Cancel</a>
</form>
