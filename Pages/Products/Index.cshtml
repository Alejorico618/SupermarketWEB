@page
@model SupermarketWEB.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Products List";
}

<h1>Products</h1>

<p>
    <a asp-page="./Create" class="btn btn-success"> Añadir Producto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.Category?.Name</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm"> Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
