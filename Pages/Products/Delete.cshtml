@page "{id:int}"
@model SupermarketWEB.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>@Model.Product.Name</h4>
    <p>Price: @Model.Product.Price</p>
    <p>Stock: @Model.Product.Stock</p>
    <p>CategoryId: @Model.Product.CategoryId</p>
</div>

<form method="post">
    <input type="hidden" asp-for="Product.Id" />
    < <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-page="./Index" class="btn btn-primary">Back to List</a>
    <a asp-page="Index">Cancel</a>
</form>
